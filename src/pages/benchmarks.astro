---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
const decisionPluginsUrl = `${base}decision-plugins/`;
---

<Layout title="Benchmarks Moved | Rastion Hub" description="Benchmarks are now listed under Decision Plugins.">
  <section class="moved">
    <h1>Benchmarks moved</h1>
    <p>Community benchmarks now live on the <a href={decisionPluginsUrl}>Decision Plugins</a> page.</p>
    <p><a class="cta" href={decisionPluginsUrl}>Go to Decision Plugins</a></p>
  </section>

  <script is:inline>
    window.location.replace({JSON.stringify(decisionPluginsUrl)});
  </script>

  <style>
    .moved {
      max-width: 42rem;
      margin: 4rem auto;
      text-align: center;
      display: grid;
      gap: 0.7rem;
    }

    .moved h1 {
      margin: 0;
      font-size: clamp(1.8rem, 5vw, 2.6rem);
    }

    .moved p {
      margin: 0;
      color: var(--text-secondary);
    }

    .moved a {
      color: var(--text-primary);
      text-decoration: underline;
      text-decoration-color: rgba(255, 255, 255, 0.35);
      text-underline-offset: 0.15rem;
    }

    .cta {
      display: inline-block;
      border: 1px solid var(--border-color);
      border-radius: 10px;
      padding: 0.5rem 0.9rem;
      text-decoration: none;
      background: var(--bg-card);
    }
  </style>
</Layout>
