<button class="theme-toggle" type="button" data-theme-toggle aria-label="Switch to light theme">
  <span class="icon icon-moon" aria-hidden="true">
    <svg viewBox="0 0 24 24" role="img" width="18" height="18" fill="none" stroke="currentColor" stroke-width="1.8">
      <path d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 1 0 9.79 9.79Z" />
    </svg>
  </span>
  <span class="icon icon-sun" aria-hidden="true">
    <svg viewBox="0 0 24 24" role="img" width="18" height="18" fill="none" stroke="currentColor" stroke-width="1.8">
      <circle cx="12" cy="12" r="4" />
      <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41" />
    </svg>
  </span>
</button>

<script is:inline>
  const toggle = document.querySelector('[data-theme-toggle]');

  const applyTheme = (theme) => {
    document.documentElement.dataset.theme = theme;
    localStorage.setItem('theme', theme);
    if (toggle) {
      toggle.setAttribute('aria-label', theme === 'dark' ? 'Switch to light theme' : 'Switch to dark theme');
    }
  };

  if (toggle) {
    const initial = document.documentElement.dataset.theme || 'dark';
    applyTheme(initial);

    toggle.addEventListener('click', () => {
      const current = document.documentElement.dataset.theme === 'light' ? 'light' : 'dark';
      applyTheme(current === 'dark' ? 'light' : 'dark');
    });
  }
</script>
