---
interface Props {
  id: number;
  name: string;
  category?: string | null;
  download_count?: number;
  owner: {
    username: string;
  };
}

const { name, category, download_count = 0, owner } = Astro.props;
const safeDownloadCount = Number.isFinite(download_count) ? Number(download_count) : 0;
---

<div class="card-item">
  <article class="hub-card">
    <div class="card-content">
      <h3>{name}</h3>
      <p class="category-badge">{category || 'Uncategorized'}</p>
      <p class="pull-command">
        <code>rastion plugin pull {name}</code>
      </p>
      <p class="download-count">{safeDownloadCount} download{safeDownloadCount === 1 ? '' : 's'}</p>
    </div>
  </article>
  <p class="owner-name">@{owner.username}</p>
</div>

<style>
  .card-item {
    display: grid;
    gap: 0.45rem;
  }

  .hub-card {
    border: 1px solid var(--border-color);
    border-radius: 14px;
    background: linear-gradient(150deg, rgba(255, 255, 255, 0.04), transparent 55%), var(--bg-card);
    padding: 0.85rem 0.9rem;
    min-height: 120px;
  }

  .card-content {
    display: grid;
    gap: 0.5rem;
  }

  h3 {
    margin: 0;
    font-size: clamp(1.02rem, 1.8vw, 1.2rem);
    line-height: 1.2;
    overflow-wrap: anywhere;
  }

  .category-badge {
    margin: 0;
    width: fit-content;
    font-size: 0.72rem;
    font-weight: 700;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: var(--text-secondary);
    border: 1px solid var(--border-color);
    border-radius: 999px;
    padding: 0.2rem 0.52rem;
    background: rgba(255, 255, 255, 0.03);
  }

  .pull-command {
    margin: 0;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: 0.82rem;
    line-height: 1.35;
    color: var(--text-primary);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.02);
    padding: 0.38rem 0.5rem;
    overflow-wrap: anywhere;
  }

  .pull-command code {
    white-space: normal;
  }

  .download-count {
    margin: 0;
    font-size: 0.84rem;
    color: var(--text-secondary);
  }

  .owner-name {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }
</style>
